<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/button_createGroup"
        android:layout_width="280dp"
        android:layout_height="85dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/black_dark"
        android:text="@string/create_text"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animImageView" />

    <Button
        android:id="@+id/button_joinGroup"
        android:layout_width="280dp"
        android:layout_height="85dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/blue_back"
        android:text="@string/joingroup_text"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_createGroup" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animImageView"
        android:layout_width="336dp"
        android:layout_height="371dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>